[Service]
name = sshd.service
type = systemd
cpu_threshold = 1
restart_cmd = systemctl restart sshd.service

[Alert]
enabled = true
message_prefix = SSH Server

[Logging]
tag = sshd-watchdog
notify_success = false

[Telegram]
notify_success = false
dbg_json = false

[Checks]
# Optional: Threshold value for remaining day, if needed. (not mandatory)
days_threshold = 14
